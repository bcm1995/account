<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="＜ 登陆"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/forget_phone"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="手机号："
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/forget_setphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:inputType="phone"
            android:hint="请输入手机号"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:cursorVisible="true"
            android:textColorHint="#ffffff"/>
        </LinearLayout>
    <TextView
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <EditText
            android:id="@+id/forget_sms"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:hint="请输入验证码"
            android:textCursorDrawable="@null"
            android:textColorHint="#ffffff"
            android:layout_toRightOf="@+id/forget_yanzheng"
            android:layout_marginLeft="6dp"
            android:background="@null" />
        <TextView
            android:id="@+id/forget_yanzheng"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="验证码:"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/register_fenkai"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="|"
            android:gravity="center"
            android:layout_toLeftOf="@+id/forget_find"/>
        <TextView
            android:id="@+id/forget_find"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginRight="12dp"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <TextView
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <EditText
            android:id="@+id/forget_setnewpass"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:hint="请输入密码"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
            android:layout_toRightOf="@+id/forget_newpass"
            android:layout_marginLeft="6dp"
            android:background="@null" />
        <TextView
            android:id="@+id/forget_newpass"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="密码:"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <TextView
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <EditText
            android:id="@+id/forget_setpassagain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:hint="请输入再次输入"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
            android:layout_toRightOf="@+id/forget_passagain"
            android:layout_marginLeft="6dp"
            android:background="@null" />
        <TextView
            android:id="@+id/forget_passagain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="确认密码:"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <TextView
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/forget_finish"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_shape_normal"
        android:text="完成"
        android:textColor="#ffffff"/>
</LinearLayout>
